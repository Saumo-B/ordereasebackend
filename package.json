{
  "name": "payment-engine",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "clean": "rimraf dist",
    "dev1": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev2": "nodemon src/server.ts",
    "dev": "nodemon",
    "build-swagger": "ts-node src/swagger-gen.ts",
    "build-ts": "tsc",
    "copy-docs": "node copy-swagger-assets.js",
    "build": "npm run clean && npm run build-swagger && npm run build-ts && npm run copy-docs",
    "ts.check": "tsc --project tsconfig.json",
    "add-build": "git add dist",
    "start": "nodemon src/server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dayjs": "^1.11.18",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "i": "^0.3.7",
    "mongoose": "^8.4.1",
    "nodemon": "^3.1.10",
    "npm": "^11.5.2",
    "pg-sdk-node": "https://phonepe.mycloudrepo.io/public/repositories/phonepe-pg-sdk-node/releases/v2/phonepe-pg-sdk-node.tgz",
    "pre-commit": "^1.2.2",
    "rimraf": "^6.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.11",
    "@types/swagger-ui-express": "^4.1.8",
    "swagger-autogen": "^2.23.7",
    "swagger-ui-dist": "^5.29.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  },
  "pre-commit": [
    "ts.check",
    "build",
    "add-build"
  ]
}
